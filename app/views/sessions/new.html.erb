<div class="top-hero-wrapper text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-gray">Log in</h1>
        <h2 class="text-gray">このページは最終的に削除する予定</h2>
        <h2 class="text-gray">最終的に自動ログインにしたい。</h2>
        <%= form_for :session, url: login_path do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "text-gray" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: "text-gray" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <%= f.submit "ログイン", class: "btn-block btn-gray" %>
        <% end %>
      </div>
    </div>
  </div>
</div>