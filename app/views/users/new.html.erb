<div class="top-hero-wrapper text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-gray">アカウント新規登録</h1>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <p class="text-left">名前を入力してね<p>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <p class="text-left">Eメールアドレスを入力してね<p>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <p class="text-left">passwordを入力してね<p>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <p class="text-left">passwordをもう一度、入力してね<p>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          <%= f.submit "登録", class: 'btn-block btn-gray' %>
        <% end %>
        <%= link_to 'ログインはこちら', login_path,class: 'text-gray' %>
      </div>
    </div>
  </div>
</div>